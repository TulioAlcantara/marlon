---
import '@fontsource/archivo';
import '../styles/global.scss';
import Header from '../components/organisms/Header.astro';
import Menu from '../components/organisms/Menu.astro';
import TagManager from '../components/organisms/TagManager.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<script>
	const changeTheme = () => {
		const currentTheme = localStorage.getItem('theme');

		if (currentTheme === 'dark') {
			localStorage.setItem('theme', 'light');
			document.documentElement.setAttribute('data-theme', 'light');
			return;
		}

		localStorage.setItem('theme', 'dark');
		document.documentElement.setAttribute('data-theme', 'dark');
	};

	const themeBtns = document.querySelectorAll('.changeThemeBtn')!;
	themeBtns.forEach((btn) => {
		btn.addEventListener('click', changeTheme);
	});
</script>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="PsicÃ³logo especializado em terapia cognitivo-comportamental para adolescentes e adultos."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
		<link rel="manifest" href="/favicon/site.webmanifest" />
		<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5" />
		<meta name="msapplication-TileColor" content="#da532c" />
		<meta name="theme-color" content="#ffffff" />

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<TagManager />
		<Header />
		<Menu />
		<slot />
	</body>
</html>
