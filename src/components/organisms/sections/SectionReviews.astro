<script>
	const sectionReviews = document.querySelectorAll<HTMLElement>(
		'.sectionReviews-container__reviews'
	);
	let isPaused = false;
	sectionReviews.forEach((element) => {
		element.addEventListener('mouseover', () => {
			element.style.animationPlayState = 'paused';
		});
		element.addEventListener('mouseleave', () => {
			element.style.animationPlayState = 'running';
		});

		element.addEventListener('click', () => {
			if (isPaused) {
				element.style.animationPlayState = 'running';
				isPaused = false;
			} else {
				element.style.animationPlayState = 'paused';
				isPaused = true;
			}
		});
	});
</script>

