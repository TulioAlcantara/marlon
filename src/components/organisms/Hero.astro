---
import Button from '../atoms/Button.astro';

const subtitle =
	'Acredito que a terapia é um processo de colaboração, onde eu estou aqui para oferecer orientação, apoio e estratégias, e você é o especialista em sua própria vida.';
const cta = {
	text: 'Agende uma consulta',
	link: '/contato',
};
const stats = [
	{
		title: 'Anos de experiência',
		value: '10',
	},
	{
		title: 'Pacientes atendidos',
		value: '200',
	},
	{
		title: 'Sessões realizadas',
		value: '1000',
	},
];
---

<section class="hero">
	<div class="hero__title">
		<h1>
			Psicólogo especializado em
			<span class="gradient">terapia cognitivo-comportamental </span>
			para adolescentes e adultos.
		</h1>
	</div>
	<p class="hero__subtitle">{subtitle}</p>
	<Button text={cta.text} link={cta.link} />
	<div class="hero-stats">
		{
			stats.map((stat) => (
				<div>
					<p class="hero-stats__value">{stat.value}</p>
					<p class="hero-stats__description">{stat.title}</p>
				</div>
			))
		}
	</div>
</section>

<style lang="scss">
	.hero {
		padding-top: 45px;
		padding-left: 32px;
		padding-right: 32px;

		&__title {
			h1 {
				color: var(--color-title);
				font-size: 2rem;
				font-weight: bold;

				@media (min-width: 1200px) {
					width: 1000px;
					font-size: 3.5rem;
				}
			}
		}

		&__subtitle {
			color: var(--color-copy);
			font-size: 1rem;
			margin-bottom: 40px;

			@media (min-width: 1200px) {
				width: 646px;
				font-size: 1.5rem;
				margin-bottom: 68px;
			}
		}

		&-stats {
			display: flex;
			flex-direction: column;
			gap: 44px;

			@media (min-width: 1200px) {
				flex-direction: row;
				justify-content: center;
				gap: 100px;
				margin: 300px 0;
			}

			&__value {
				margin-top: 0;
				font-weight: 500;
				font-size: 2rem;
				margin-bottom: 8px;
				padding-left: 8px;
				color: var(--color-accent);

				@media (min-width: 1200px) {
					text-align: center;
					font-size: 3rem;
					margin-bottom: 16px;
				}
			}

			&__description {
				margin-top: 0;
				font-weight: 500;
				font-size: 1rem;
				color: var(--color-title);

				@media (min-width: 1200px) {
					text-align: center;
					font-size: 2rem;
				}
			}
		}
	}
</style>
