---
import { Image } from 'astro:assets';
import heroImage from '../../assets/images/hero.jpg';
import Button from '../atoms/Button.astro';
import moon from '/icons/moon.svg?raw';
import star from '/icons/star-gradient.svg?raw';

const cta = {
	text: 'Agende uma consulta',
	link: '/contato',
};
---

<section id="inicio" class="hero">
	<div class="hero-container">
		<button class="hero__themeBtn changeThemeBtn" aria-label="Mudar tema">
			<Fragment set:html={moon} />
		</button>

		<div class="hero__title">
			<h1>
				Psic√≥logo especializado em
				<span class="gradient">terapia cognitivo-comportamental </span>
				para adolescentes e adultos.
			</h1>
		</div>
		<div class="hero__cta">
			<Button text={cta.text} link={cta.link} fullWidth={true} />
		</div>
		<ul class="hero-stats">
			<li>
				<div>
					<p class="hero-stats__value">4k+</p>
					<p class="hero-stats__description">horas atendidas</p>
				</div>
			</li>

			<li>
				<div>
					<p class="hero-stats__value">200+</p>
					<p class="hero-stats__description">pacientes satisfeitos</p>
				</div>
			</li>

			<li>
				<div>
					<p class="hero-stats__value">
						5.0

						<Fragment set:html={star} />
					</p>
					<p class="hero-stats__description">no Google Review</p>
				</div>
			</li>
		</ul>
		<Image class="hero__img" src={heroImage} alt="" />
		<div class="hero__shadow"></div>
	</div>
</section>

<style lang="scss">
	@import 'src/styles/_mixins.scss';

	.hero {
		max-width: 1780px;
		margin-bottom: 80px;
		border-radius: 20px;

		@include tablet {
			margin-bottom: 70px;
		}

		@include desktop {
			margin-bottom: 120px;
		}

		@include desktop {
			background: var(--color-hero-bg);
		}

		&-container {
			max-width: 1400px;
			padding-left: 32px;
			padding-right: 32px;
			padding-top: 40px;
			margin: 0 auto;
			position: relative;
			overflow-x: hidden;
			display: grid;

			grid-template-areas: 'title' 'stats' 'cta';

			@include tablet {
				grid-template-areas: 'theme' 'title' 'cta' 'stats';
				padding-top: 32px;
				margin-top: 8px;
				padding-left: 70px;
				padding-right: 70px;
			}

			@include desktop {
				padding-top: 100px;
				padding-bottom: 100px;
				margin-top: 45px;
				padding-left: 32px;
				padding-right: 32px;
				border-radius: 20px;
				overflow: visible;
				margin-bottom: 120px;
			}
		}

		&__themeBtn {
			grid-area: theme;
			margin-bottom: 1rem;
			display: none;

			@include desktop {
				display: block;
			}
		}

		&__title {
			grid-area: title;
			backdrop-filter: blur(10px);
			-webkit-backdrop-filter: blur(10px);
			border-radius: 20px;
			z-index: 1;

			@include tablet {
				background: var(--color-header-bg);
				backdrop-filter: blur(19px);
				width: 500px;
				padding: 32px 32px 32px 0;
			}

			@include desktop {
				width: 950px;
				padding: 24px;
				margin-left: -24px;
			}

			h1 {
				color: var(--color-title);
				font-size: 2rem;
				font-weight: bold;

				@include tablet {
					font-size: 2.5rem;
				}

				@include desktop {
					font-size: 3.5rem;
				}
			}
		}

		&__cta {
			grid-area: cta;
			margin-top: 32px;

			@include tablet {
				margin-top: 16px;
			}
		}

		&-stats {
			grid-area: stats;
			position: relative;
			display: flex;
			flex-direction: column;
			gap: 44px;
			margin-top: 24px;

			@include tablet {
				flex-direction: row;
				justify-content: start;
				gap: 100px;
				margin: 110px 0 30px;
			}

			@include desktop {
				margin: 100px 0 0 0;
			}

			&__value {
				margin-top: 0;
				font-weight: 500;
				font-size: 2rem;
				margin-bottom: 8px;
				padding-left: 8px;
				background: var(--color-accent-gradient);
				background-clip: text;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;

				@include tablet {
					text-align: center;
					font-size: 2rem;
					margin-bottom: 16px;
				}

				@include desktop {
					font-size: 3rem;
				}
			}

			&__description {
				margin-top: 0;
				font-weight: 500;
				font-size: 1rem;
				color: var(--color-title);

				@include tablet {
					text-align: center;
					font-size: 1rem;
				}

				@include desktop {
					font-size: 1rem;
				}
			}
		}

		&__img {
			position: absolute;
			bottom: 100px;
			right: -35px;
			border-radius: 20px;
			object-fit: cover;
			object-position: center;
			width: 200px;
			height: 280px;

			@include tablet {
				top: 0;
				right: 0;
				display: block;
				width: 240px;
				height: 340px;
			}

			@include desktop {
				width: 560px;
				height: 800px;
				top: 50px;
			}
		}

		&__shadow {
			display: none;

			@include desktop {
				display: block;
				position: absolute;
				width: 560px;
				height: 800px;
				opacity: 0.5;
				border-radius: 50%;
				filter: blur(100px);
				background-color: rgba(252, 114, 71, 1);
				z-index: -1;
				right: 0;
				top: 0;
			}
		}
	}
</style>
