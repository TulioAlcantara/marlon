---
import Button from '../atoms/Button.astro';

const subtitle =
	'Acredito que a terapia é um processo de colaboração, onde eu estou aqui para oferecer orientação, apoio e estratégias, e você é o especialista em sua própria vida.';
const cta = {
	text: 'Agende uma consulta',
	link: '/contato',
};
const stats = [
	{
		title: 'horas atendidas',
		value: '4k+',
		numericValue: 4,
	},
	{
		title: 'paciente satisfeitos',
		value: '200+',
		numericValue: 200,
	},
	{
		title: 'no Google Review',
		value: '5.0',
		numericValue: 5,
	},
];
---

<script>
	const increment = (el: Element) => {
		if (el instanceof HTMLElement) {
			const target = Number(el.dataset.numeric);
			console.log(target);
			let count = 0;
			const increment = Math.ceil(target / 10);
			const interval = setInterval(() => {
				count += increment;
				el.textContent = count.toString();
				if (count >= target) {
					clearInterval(interval);
				}
			}, 50);
		}
	};

	const stats = document.querySelectorAll('.hero-stats__value');
	stats.forEach((stat) => {
		increment(stat);
	});
</script>

<section class="hero">
	<div class="hero__title">
		<h1>
			Psicólogo especializado em
			<span class="gradient">terapia cognitivo-comportamental </span>
			para adolescentes e adultos.
		</h1>
	</div>
	<p class="hero__subtitle">{subtitle}</p>
	<div class="hero__cta">
		<Button text={cta.text} link={cta.link} />
	</div>
	<div class="hero-stats">
		{
			stats.map((stat) => (
				<div>
					<p class="hero-stats__value" data-numeric={stat.numericValue}>
						{stat.value}
					</p>
					<p class="hero-stats__description">{stat.title}</p>
				</div>
			))
		}
		<img class="hero__imgMobile" src="https://via.placeholder.com/200x280" />
	</div>
	<img class="hero__img" src="https://via.placeholder.com/560x800" />
</section>

<style lang="scss">
	@import 'src/styles/_mixins.scss';

	.hero {
		padding-left: 32px;
		padding-right: 32px;
		padding-top: 60px;
		position: relative;
		display: grid;

		grid-template-areas: 'title' 'stats' 'subtitle' 'cta';

		@include tablet {
			grid-template-areas: 'title' 'subtitle' 'cta' 'stats';
			padding-top: 32px;
			margin-top: 8px;
		}

		@include desktop {
			padding-top: 142px;
			margin-top: 45px;
		}

		&__title {
			grid-area: title;
			background: var(--color-header-bg);
			backdrop-filter: blur(10px);
			border-radius: 20px;
			z-index: 1;

			@include tablet {
				width: 500px;
				padding: 32px 32px 32px 0;
			}

			@include desktop {
				width: 1000px;
				padding: 24px 24px 24px 0;
			}

			h1 {
				color: var(--color-title);
				font-size: 2rem;
				font-weight: bold;

				@include tablet {
					font-size: 2.5rem;
				}

				@include desktop {
					font-size: 3.5rem;
				}
			}
		}

		&__subtitle {
			grid-area: subtitle;
			color: var(--color-copy);
			font-size: 1rem;
			margin-top: 60px;
			margin-bottom: 40px;

			@include tablet {
				width: 400px;
				font-size: 1.25rem;
				margin-top: 16px;
				margin-bottom: 40px;
			}

			@include desktop {
				width: 646px;
				font-size: 1.5rem;
				margin-top: 24px;
				margin-bottom: 68px;
			}
		}

		&__cta {
			grid-area: cta;
		}

		&-stats {
			grid-area: stats;
			position: relative;
			display: flex;
			flex-direction: column;
			gap: 44px;
			margin-top: 24px;

			@include tablet {
				flex-direction: row;
				justify-content: center;
				gap: 100px;
				margin: 110px 0 30px;
			}

			@include desktop {
