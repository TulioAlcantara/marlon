---
import Button from '../atoms/Button.astro';
import logo from '/logo.svg?raw';
import hamb from '/hamb.svg?raw';

const items = [
	{
		name: 'Início',
		link: '#inicio',
	},
	{
		name: 'Como posso te ajudar',
		link: '#ajuda',
	},
	{
		name: 'O que é Terapia',
		link: '#terapia',
	},
	{
		name: 'O processo',
		link: '#processo',
	},
];

const cta = {
	text: 'Agendar uma consulta',
	link: '#cta',
};

let activeLink = 'Início';
---

<header class="header">
	<div class="header__logo">
		<Fragment set:html={logo} />
	</div>
	<div class="header-links">
		{
			items.map((item) => (
				<a
					class={`header-links__link ${activeLink == item.name && 'header-links__link--active'}`}
					href={item.link}
				>
					{item.name}
				</a>
			))
		}
	</div>
	<div class="header__cta">
		<Button text={cta.text} link={cta.link} isSmall={true} />
	</div>
	<div class="header__menu">
		<button aria-label="Abrir menu">
			<Fragment set:html={hamb} />
		</button>
	</div>
</header>

<style lang="scss">
	@import '../../styles/_mixins.scss';

	.header {
		display: flex;
		position: sticky;
		justify-content: space-between;
		align-items: center;
		z-index: 2;
		top: 32px;
		max-width: 1285px;
		padding: 24px;
		border-radius: 20px;
		margin: 32px 50px 0;
		backdrop-filter: blur(10px);
		background-color: (--color-header-bg);

		@include desktop {
			padding: 24px 45px;
		}

		&__logo {
			color: var(--color-title);
		}

		&-links {
			display: none;
			gap: 96px;

			@include desktop {
				display: flex;
			}

			&__link {
				text-decoration: none;
				font-size: 1rem;
				font-weight: 600;
				color: var(--color-title);

				&:hover {
					color: var(--color-accent);
				}

				&--active {
					color: var(--color-accent);
				}
			}
		}

		&__cta {
			display: none;

			@include tablet {
				display: block;
			}
		}

		&__menu {
			display: block;

			@include tablet {
				display: none;
			}

			button {
				all: unset;
			}
		}
	}
</style>
