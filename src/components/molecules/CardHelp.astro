---
interface Props {
	title: string;
	description: string;
	icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="helpCard">
	{icon && <img src={icon} alt={title} />}
	<h2>{title}</h2>
	<p>{description}</p>
</div>

<style lang="scss">
	.helpCard {
		background: var(--color-card-bg);
		padding: 24px;
		border-radius: 20px;
		cursor: pointer;
		width: 280px;

		@media (min-width: 1200px) {
			width: unset;
		}

		&:hover {
			background: var(--color-card-bg-hover);
			box-shadow: 0px 0px 60px 20px var(--color-accent);
			transition: all 0.5s ease;
		}

		h2 {
			font-size: 1.5rem;
			font-weight: 700;
			margin-bottom: 12px;
			color: var(--color-accent);
		}

		p {
			font-size: 1.25rem;
			color: var(--color-copy);
		}
	}
</style>
